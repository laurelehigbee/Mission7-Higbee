<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title> <!--Where to display the title-->
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/fontawesome-free-5.15.4-web/css/all.min.css" rel="stylesheet" />

</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">The Bookstore</div>
                <div class="col-3 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>

    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:category></vc:category>
        </div>

        <div class="col-9">
            @RenderBody() <!--Where to render each specific page's information-->
        </div>
    </div>

</body>
</html>